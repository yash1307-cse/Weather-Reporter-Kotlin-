<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reporter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_reporter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_reporter"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reporter">
        <activity
            android:name="com.yash1307.reporter.WelcomeScreen"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yash1307.reporter.MainActivity"
            android:exported="true"
            android:label="Weather Reporter">

        </activity>
    </application>

</manifest>